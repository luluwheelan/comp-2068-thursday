extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th Status
            th Actions
        
        tbody
          each blog in blogs
            tr
              td
                a(href=`/blogs/${blog.id}`)= blog.title
              td= blog.status
              td
                a(href=`/blogs/${blog.id}/edit`) edit 
                = " | "
                form.destroy(action="/blogs/destroy", method="POST", onsubmit='return confirm("Are you absolutely doutly sure you wanna delete this masterpiece???");')
                  input(type="hidden", name="id", value=blog.id)
                  input(type="submit", value="delete")
